@model FluentValidation_JwtToken.Models.Filme


<div class="text-center"> <h1>Adicionar Filme</h1></div>

@if (TempData["sucess"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert">X</button>
        @TempData["sucess"]
    </div>
}
<div class="col-md-6 mx-auto">
<form asp-action="New" method="post">
    <div class="form-group mx-auto">
            <label asp-for="Titulo" class="control-label">Título do Filme</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
       
    <div class="form-group">
            <label asp-for="Diretor" class="control-label">Diretor do Filme</label>
            <input asp-for="Diretor" class="form-control" />
            <span asp-validation-for="Diretor" class="text-danger"></span>
    </div>
        <div class="form-group">
            <label asp-for="Ano" class="control-label">Ano de Lançamento</label>
            <input asp-for="Ano" class="form-control" />
            <span asp-validation-for="Ano" class="text-danger"></span>
        </div>


        <button type="submit" class="btn btn-primary mt-2">Adicionar</button>
</form>
</div>